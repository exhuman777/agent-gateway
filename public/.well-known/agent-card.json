{
  "name": "Agent Gateway",
  "description": "API Registry and Router for the Agent Economy. Discover APIs by capability, route to the best provider based on quality, latency, and price.",
  "url": "https://agent-gateway-zeta.vercel.app",
  "version": "1.0.0",
  "protocol_version": "0.3.0",
  "provider": {
    "name": "Rufus",
    "url": "https://rufus.yesno.events"
  },
  "capabilities": {
    "streaming": false,
    "push_notifications": false
  },
  "skills": [
    {
      "id": "registry.list",
      "name": "List APIs",
      "description": "List all registered APIs in the marketplace with optional filters",
      "endpoint": "/api/v1/registry",
      "method": "GET",
      "input_schema": {
        "type": "object",
        "properties": {
          "category": { "type": "string", "description": "Filter by category" },
          "minQuality": { "type": "number", "description": "Minimum quality score (0-5)" },
          "maxPrice": { "type": "number", "description": "Maximum price per request" },
          "capabilities": { "type": "string", "description": "Comma-separated capability tags" },
          "sortBy": { "type": "string", "enum": ["quality", "price", "latency", "popularity"] }
        }
      }
    },
    {
      "id": "registry.get",
      "name": "Get API Details",
      "description": "Get full details of a specific API by its ID",
      "endpoint": "/api/v1/registry/{id}",
      "method": "GET",
      "input_schema": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "description": "API identifier" }
        },
        "required": ["id"]
      }
    },
    {
      "id": "route",
      "name": "Smart Route",
      "description": "Find the best API provider for a given capability based on your preferences",
      "endpoint": "/api/v1/route",
      "method": "POST",
      "input_schema": {
        "type": "object",
        "properties": {
          "capability": { "type": "string", "description": "Capability tag to find (e.g., research, market-data)" },
          "preferences": {
            "type": "object",
            "properties": {
              "max_latency_ms": { "type": "integer", "description": "Maximum acceptable latency in ms" },
              "max_price": { "type": "number", "description": "Maximum price per request" },
              "min_quality_score": { "type": "number", "description": "Minimum quality score (0-5)" }
            }
          }
        },
        "required": ["capability"]
      }
    },
    {
      "id": "capabilities.list",
      "name": "List Capabilities",
      "description": "List all available capabilities and how many providers offer them",
      "endpoint": "/api/v1/capabilities",
      "method": "GET"
    },
    {
      "id": "search",
      "name": "Web Search (x402)",
      "description": "Search the web using Brave Search API. First 10 calls/day free per IP, then $0.005 USDC per call via x402 micropayments on Base.",
      "endpoint": "/api/v1/search",
      "method": "POST",
      "input_schema": {
        "type": "object",
        "properties": {
          "query": { "type": "string", "description": "Search query string" },
          "count": { "type": "number", "description": "Number of results (1-20, default 10)" }
        },
        "required": ["query"]
      },
      "payment": {
        "protocol": "x402",
        "price": "$0.005",
        "currency": "USDC",
        "network": "base-sepolia",
        "free_tier": {
          "daily_limit": 10,
          "per": "IP address"
        },
        "wallet": "0x3058ff5B62E67a27460904783aFd670fF70c6A4A"
      }
    },
    {
      "id": "register",
      "name": "Register API",
      "description": "Register a new API in the marketplace (requires review)",
      "endpoint": "/api/registry/register",
      "method": "POST",
      "input_schema": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "API display name" },
          "description": { "type": "string", "description": "What the API does" },
          "endpoint": { "type": "string", "format": "uri", "description": "Full URL of the API endpoint" },
          "category": {
            "type": "string",
            "enum": ["research", "market-data", "image-gen", "code", "translation", "summarization", "embeddings", "web-scraping", "audio", "video", "other"]
          },
          "capabilities": { "type": "array", "items": { "type": "string" }, "description": "Capability tags" },
          "pricing": {
            "type": "object",
            "properties": {
              "model": { "type": "string", "enum": ["free", "per_request", "subscription", "x402"] },
              "price": { "type": "number" },
              "currency": { "type": "string", "enum": ["USD", "USDC", "ETH"] },
              "freeQuota": { "type": "integer", "description": "Free requests per day" }
            },
            "required": ["model", "price"]
          },
          "a2aCard": { "type": "string", "format": "uri", "description": "URL to your A2A agent card" },
          "providerWallet": { "type": "string", "description": "Wallet address for payments" }
        },
        "required": ["name", "endpoint", "category", "pricing"]
      }
    }
  ],
  "authentication": {
    "schemes": ["none", "x402"],
    "description": "Public API - no auth for reads. Paid endpoints use x402 micropayments (10 free calls/day, then USDC on Base)."
  },
  "rate_limits": {
    "read": { "requests_per_minute": 100 },
    "write": { "requests_per_minute": 30 }
  },
  "discovery": {
    "llms_txt": "/llms.txt",
    "methodology": "/METHODOLOGY.md"
  },
  "categories": [
    "research",
    "market-data",
    "image-gen",
    "code",
    "translation",
    "summarization",
    "embeddings",
    "web-scraping",
    "audio",
    "video",
    "other"
  ]
}
